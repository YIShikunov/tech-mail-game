<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="title_main">WuXing</div>
    <div class="title_sub">Авторизация</div>
    <form action="/api/v1/auth/signin" class="form" method="POST" id="signup-form">
        <div class="form__line">
            <label class="form__line__label">Логин:
                <input class="form__line__input" name="login" pattern="^[a-zA-Z0-9_]+$" type="text" required="" placeholder="Ваш логин"/>
            </label>
        </div>
        <div class="form__line">
            <label class="form__line__label">Почта:
                <input class="form__line__input" name="email" type="email" required="" placeholder="example@example.ru"/>
            </label>
        </div>
        <div class="form__line">
            <label class="form__line__label">Пароль:
                <input class="form__line__input" name="password" type="password" required="" placeholder="********"/>
            </label>
        </div>
        <button class="btn btn_green btn_auth">Зарегистрироваться</button>
    </form>
    <a class="btn btn_red" href="#">НАЗАД</a>
</fest:template>
