<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="title">WuXing</div>
    <div class="auth">
        <div class="auth__title">Авторизация</div>
	<div class="auth__form">
        <form action="/api/v1/auth/signin" method="POST" id="signup-form">
                <span class="auth__form__line">Логин:
                        <input name="login" class="auth__form__input" required="" pattern="^[a-zA-Z0-9_]+$" type="text"/>
                </span>
                <span class="auth__form__line">Почта:
                        <input name="email" class="auth__form__input" required="" type="email"/>
                </span>
                <span class="auth__form__line">Пароль:
                        <input name="password" class="auth__form__input" required="" type="password"/>
                </span>
                <button class="auth__form__btn">Войти</button>
        </form>
	</div>
    	<a class="auth__btn" href="#">НАЗАД</a>
    </div>
</fest:template>
