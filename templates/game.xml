<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <a class="btn btn_red" href="#">НАЗАД</a>
    <div class="lobby">
        <div class="title_sub">Выбрать соперника</div>
        <div class="score">
            <table class="score__table">
                <tr class="score__table__tr">
                    <td class="score__table__td score__table__td_name">Сразиться с ...</td>
                </tr>
                <fest:each iterate="json" index="i" value="waitPlrs">
                    <tr class="score__table__tr">
                        <td class="score__table__td score__table__td_name choose"><fest:value>waitPlrs.name</fest:value></td>
                    </tr>
                </fest:each>
            </table>
        </div>
    </div>
    <div class="game">
        <div><span class="turn" style="color: white;"></span></div>
        <div>_<span class="state" style="color: yellow;"></span>_</div>
        <canvas width="800" height="550" class="game__field"></canvas>
    </div>  
</fest:template>
